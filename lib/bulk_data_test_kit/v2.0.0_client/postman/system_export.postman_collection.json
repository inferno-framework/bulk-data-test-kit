	"item": [
		{
			"name": "Kickoff",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"kick-off was accepted\", function () {",
							"  pm.response.to.have.status(202);",
							"});",
							"",
							"pm.collectionVariables.set(\"status-url\", pm.response.headers.get('Content-Location'));",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "GET",
